<div class="container">
  <h1>List a new permit</h1>

  <div id="new-permit-form">
    <%= simple_form_for [@user, @permit] do |f|%>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :perks, as: :check_boxes, collection: Permit::PERKS, input_html: { multiple: true }, include_hidden: false %>
      <%= f.input :price %>
      <%= f.input :location %>
      <%= f.input :available %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, value: 'List permit', class: 'btn btn-primary' %>
    <% end %>
  </div
>
  <%= link_to 'cancel', permits_path %>
</div>
