
<h1>Permit Listings</h1>

<table class="permits">
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
                <td><p><%= link_to permit.name, permit_path(permit) %></p>

                <% if permit.photo.attached? %>

          <p><%= cl_image_tag permit.photo.key, height: 100, width: 100, crop: :fill %></p>

        <% else %>

          <p><img src="https://image.shutterstock.com/image-vector/picture-vector-icon-no-image-260nw-1350441335.jpg" class = "img-thumbnail" style="width:100px;height:100px"></p>
        <% end  %>
                available now:

        <% if permit.available %>
          <%= "yes" %>
        <% else %>
          <%= "no" %>
          <% end %>

          <% if current_user == permit.user %>
              <%= link_to "[ edit ]", edit_permit_path(permit), class: "card-edit-link" %>
              <%= link_to "[ delete ]", permit_path(permit), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
          <% else %>
            <%= link_to "[ book permit ]", new_permit_booking_path(permit) %>
          <% end %>
        <br><%= permit.description %></p></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '[ list a permit for rent ]', new_permit_path %>
<%= link_to 'Back', root_path %>

































































































