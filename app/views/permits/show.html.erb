
  <div class="container text-center">
    <h1><%= @permit.name %></h1>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @permits.each do |permit| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= permit.name %>

            <% if current_user == @permit.user %>
              <%= link_to "+", character_path(permit), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
            <% end %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
